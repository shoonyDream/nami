{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@types/node"]
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": ["node_modules", "./public"]
}
